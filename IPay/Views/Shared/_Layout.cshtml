<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="main">
      <img
        class="img--logo img"
        src="~/LayoutImages/onlinelogomaker-051422-0001-7034.png"
        alt="banking logo"
      />
      <div class="nav">
        <ul class="nav--link">
          <li class="nav--1 link">
            <a asp-controller="Home" asp-action="Index" target="_self">Home</a>
          </li>
          <li class="nav--2 link"><a href="#feature--1">Features</a></li>
          <li >      @*class="nav--3 link"*@
             <a asp-controller="User" asp-action="Login">Login</a>
          </li>
          <li>   @*class="nav--4 nav__link nav__link--btn btn--show-modal link"*@
            <a asp-controller="User" asp-action="Signup">Create account</a>
          </li>
        </ul>
      </div>
      
      
    </div>
    <div class="modal hidden" >
      <button class="btn--close-modal">&times;</button>
      <h2 class="modal__header">Open your bank account <br /></h2>
      <form class="modal__form" id="form" >
        <div class="form-control">
          <label for="username">Name </label><br />
          <input type="text" placeholder="" id="username" />

          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small></small>
        </div>
        <div class="form-control">
          <label for="username">Email Address </label><br>
          <input type="email" placeholder="" id="email" />
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small></small>
        </div>
        <div id="gender">
          <input type="radio" id="radio1" name="radiobox"><label for="radio1">male</label></br>
          <input type="radio" id="radio2" name="radiobox"><label for="radio2">female</label></br>
<input type="radio" id="radio3" name="radiobox"><label for="radio3">other</label>
        </div>
        <div class="form-control">
          <label for="username">Password </label><br>
          <input type="password" placeholder="" id="password" />
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small></small>
        </div>

        <div class="form-control">
          <label for="username">Confirm password</label><br>
          <input type="password" placeholder="" id="password2" />
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small></small>
        </div>
        <div class="form-control">
          <label for="username">Pin</label><br />
          <input type="password" placeholder="" id="pin" />
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small></small>
        </div>

        <button class="btn">Submit &rarr;</button>
      </form>
    </div>
    
    
  
 


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

